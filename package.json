{
  "name": "@byu-oit/ts-claims-engine-client",
  "version": "4.0.3",
  "description": "Claims engine client implementation in TypeScript",
  "main": "dist/adjudicator-client.js",
  "types": "dist/adjudicator-client.d.ts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "del-cli dist",
    "coverage": "nyc report --reporter=json",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "prepublishOnly": "npm run build && npm test && npm run lint",
    "test": "nyc mocha -r ts-node/register -r source-map-support/register ./test/**/*-test.ts"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/byu-oit/ts-claims-engine-client.git"
  },
  "keywords": [
    "claims",
    "adjudicator",
    "engine",
    "client",
    "typescript"
  ],
  "author": "Spencer Tuft <stuft2@byu.edu>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/byu-oit/ts-claims-engine-client/issues"
  },
  "homepage": "https://github.com/byu-oit/ts-claims-engine-client#readme",
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.19.6",
    "@types/uuid": "^3.4.9",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "chai": "^4.2.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.2.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^8.10.2",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@byu-oit/ts-claims-engine": "^2.2.1",
    "ajv": "^6.12.6",
    "uuid": "^3.4.0"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ]
  },
  "eslintIgnore": [
    "node_modules",
    "example",
    "dist",
    "coverage"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
